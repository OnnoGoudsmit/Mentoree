<!-- Mentor big profile card -->
<div class=" container">
  <div class="row">
    <div class="col-8 offset-2 card card-mentor-big">
      <div class="row">
        <div class="mentor-avatar-big col-3 align-self-center">
          <img class="avatar-large" src="https://cdn2.iconfinder.com/data/icons/avatars-99/62/avatar-370-456322-512.png" alt="">
        </div>
        <div class="mentor-info col-7 text-left p-3">
          <h2>Firstname Lastname</h2>
          <h3>Industry</h3>
